# --------------------------------------------------
# Runtime Environment
# --------------------------------------------------
# development | production
NODE_ENV=development


# --------------------------------------------------
# Observability / Logging
# --------------------------------------------------

# Server log level
# Allowed values: debug | info | warn | error
# Defaults:
# - development: debug
# - production: info
LOG_LEVEL=debug

# Client-side log level
# Defaults:
# - development: debug
# - production: warn
CLIENT_LOG_LEVEL=debug


# --------------------------------------------------
# Sampling (0.0 to 1.0)
# --------------------------------------------------

# Fraction of logs to sample
LOG_SAMPLING_RATE=1.0

# Fraction of traces to sample
TRACE_SAMPLING_RATE=0.1


# --------------------------------------------------
# Metrics
# --------------------------------------------------

# Enable metrics collection (true / false)
METRICS_ENABLED=true

# Prefix for emitted metrics
METRICS_PREFIX=llm_journey


# --------------------------------------------------
# Client Logging (Batching & Retry)
# --------------------------------------------------

# Enable client log batching (true / false)
CLIENT_LOG_BATCHING=true

# Max logs per batch
CLIENT_LOG_BATCH_SIZE=10

# Delay before sending batch (milliseconds)
CLIENT_LOG_BATCH_DELAY=5000

# Retry attempts for failed log uploads
CLIENT_LOG_RETRY_ATTEMPTS=3

# Delay between retries (milliseconds)
CLIENT_LOG_RETRY_DELAY=1000


# --------------------------------------------------
# Build / Version Info
# --------------------------------------------------

# Application version (fallbacks to npm_package_version)
APP_VERSION=0.1.0

# Build identifier (used for tracing / debugging)
BUILD_ID=dev
